---
import AdminLayout from "@/layouts/AdminLayout.astro";

const { user  } = Astro.locals;
if (user === null) {
  return Astro.redirect("/login");
}

---

<AdminLayout title="ImgUU Admin">
  <form method="post">
    <div class="space-y-12 mx-auto max-w-7xl">
      <div class="border-b border-white/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-white">
          Wiki
        </h2>
  
        <div class="mt-10 grid grid-flow-row auto-rows-max md:auto-rows-min">
          <div class="text-sm font-semibold leading-6 text-white mb-2">
            Path Template Rule
          </div>
          <table class="w-full text-left text-white border-collapse h-60">
            <thead class="text-gray-400 bg-gray-800 dark:bg-gray-900">
              <tr>
                <th>keyword</th>
                <th>meaning</th>
                <th>example</th>
              </tr>
            </thead>
            <tbody>
              <tr class="bg-gray-900 border-b dark:border-gray-200 hover:bg-gray-800 dark:hover:bg-gray-700">
                <td>{ "{year}" }</td>
                <td>current year</td>
                <td> 2025 </td>
              </tr>
              <tr class="bg-gray-900 border-b dark:border-gray-200 hover:bg-gray-800 dark:hover:bg-gray-700">
                <td>{ "{month}" }</td>
                <td>current month</td>
                <td> 02 </td>
              </tr>
              <tr class="bg-gray-900 border-b dark:border-gray-200 hover:bg-gray-800 dark:hover:bg-gray-700">
                <td>{ "{day}" }</td>
                <td>current day</td>
                <td> 01 </td>
              </tr>
              <tr class="bg-gray-900 border-b dark:border-gray-200 hover:bg-gray-800 dark:hover:bg-gray-700">
                <td>{ "{extName}" }</td>
                <td>File extension</td>
                <td> .png </td>
              </tr>
              <tr class="bg-gray-900 border-b dark:border-gray-200 hover:bg-gray-800 dark:hover:bg-gray-700">
                <td>{ "{md5}" }</td>
                <td>image file Md5-Hash</td>
                <td> 0c8bfe6821a91c3d96b25e2ea2dcf827 </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </form>  
</AdminLayout>
